{
    "pluginAlias": "DoorSensor",
    "pluginType": "accessory",
    "schema": {
      "type": "object",
        "properties": {
          "devices": {
            "type" : "array",
            "items" : {
              "title": "Device",  
              "type" : "object",
              "properties" : {
                "name": {
                  "title": "Name",
                  "type": "string",
                  "required": true,
                  "default": "Gate"
                  },
                "openpath": {
                  "title": "Location of open status file",
                  "type" : "string",
                  "required" : true,
                  "default" : "/yolink/alarm/devices/patiogate/open.txt"
                  },
                "closedpath": {
                  "title": "Location of closed status file",
                  "type" : "string",
                  "required" : true,
                  "default" : "/yolink/alarm/devices/patiogate/closed.txt"
                  }
                }
              }
            }
          }
        }
  }